
@page
@using CoursesAppMVC.Localization
@using CoursesAppMVC.Web.Pages.Instructors
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<CoursesAppMVCResource> L
@{
    Layout = null;
}
<form asp-page="/Instructors/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewInstructor"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Instructor.Name" />
         
            <abp-input asp-for="Instructor.ShortBio" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
